/* components/pickBrand.wxss */
.pick-title {
  display: flex;
  width: 100%;
  position: fixed;
  top: 0px;
  padding: 10px 0px;
  background-color: #ffffff;
  z-index: 99;
}
.pick-title text {
  padding: 0px 15px;
}
.pick-title .pick-title-cnacle {
  flex: 1;
  text-align: right;
}

.pickBrand-model {
  position: fixed;
  background-color: #FFFFFF;
  width: 100%;
  height: 100%;
  top: 36px;
  z-index: 99;
} 

.pickBrand {
  margin: 15px;
  background-color: #F5F7FA;
}

.pickBrand-city-code {
  padding: 5px 10px;
  color: #566366;
  background-color: #E1E7F1;
  border-radius: 4px;
}

.pickBrand-city-data {
  padding-right: 8%;  
  padding-top: 15px;
  background-color: #ffffff;
}

.pickBrand-city-data text {
  margin-left: 4%;
  display: inline-block;
  text-align: center;
  padding: 5px 0px;
  color: #303131;
}

.pickBrand-left-code {
  position: fixed;
  top: 50px;
  right: 23px;
  width: 10px;
  color: #666666;
  text-align:center;
}

.pickBrand-left-code text {
  display: block;
  font-size: 14px;
  font-weight: 400;
  color: #35A1FB;
}

.pickBrand .brand-img {
  width: 30px;
  height: 30px;
}

.pickBrand .brand-cell {
  display:flex;
  align-items:center;
  padding:5px 0px;
  border-bottom: 1px solid #efefef;
}

.pickBrand-detail-model {
  position: fixed;
  background-color: #FFFFFF;
  width: 100%;
  height: 100%;
  top: 36px;
  z-index: 100;
}

.pickBrand-detail-model .brand-detail-name {
  margin-left: 10px;
  padding: 5px 15px;
  border-bottom: 1px solid #efefef;
  color: #303131;
}
