/* components/chatInput/chatInput.wxss */
.chat-input {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}
.icon {
    position: relative;
    margin: 0;
    padding: 0;
    width: 33px;
    height: 33px;
    border: 1px solid #8C9095;
    border-radius: 50%;
}
.icon icon {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.send {
    display: flex;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
    height: 33px;
    margin: 0;
    padding: 0 5px;
    border: 1px solid #8C9095;
    color: #8C9095;
    font-weight: 300;
}
.send::after{
    display: none;
}

.c-input {
    box-sizing: border-box;
    width: 62%;
    min-height: 68rpx;
    max-height: 114rpx;
    border: 1px solid #B4B6BA;
    border-radius: 6px;
    padding: 10rpx;
    line-height: 1;
    flex: 1;
}
.c-input-holder {
    width: 10rpx;
}
.ios-c-input {
    padding: 0;
    margin: 0;
}

.btn-voice {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    padding: 0;
    min-height: 33px;
    height: 72.4%;
    width: 62%;
    border: 1px solid #B4B6BA;
    border-radius: 6px;
    color: #B4B6BA;
}
.btn-voice::after {
    display: none;
}