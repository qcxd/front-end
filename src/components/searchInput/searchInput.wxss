/* components/searchInput/searchInput.wxss */
.search-input {
    position: relative;
    height: 42px;
    width: 100%;
    padding: 9px 60px 5px 8px;
    box-sizing: border-box;
    background-color: #fff;
}
.input-box {
    display: flex;
    align-items: center;
    height: 28px;
    background-color: rgb(239,239,239);
    border-radius: 5px;
}
.icon-search {
    width: 12px;
    height: 12px;
    line-height: 0;
    font-size: 0;
    margin: 0 14px;
}
.icon-bell {
    width: 20px;
    height: 20px;
}
.bell-box {
    position: absolute;
    right: 21px;
    top: 9px;
}
.badge {
    position: absolute;
    top: -0.4em;
    right: -0.4em;
    padding: 0.15em 0.4em;
    min-width: 6px;
    font-size: 10px;
    color: #fff;
    line-height: 1;
    border-radius: 18px;
    background-color: #F43530;
}
.badge-empty {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(50%,-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #F43530;
}

.input-placeholder {
    color: #b8bdc2;
    font-size: 14px;
}
.input-text {
    font-size: 14px;
    line-height: 1;
}