/* components/carCard/carCard.wxss */

.carCard {
  display: flex;
  width: 100%;
}

.carCard .car-image {
  width: 115px;
}

.carCard image {
  width: 100px;
  height: 80px;
}

.carCard .car-info {
  flex: 1;
}

.carCard .title-text {
  color: #13334D;
  font-size: 14px;
  font-weight: 400;
}

.carCard .small-text {
  padding-top: 2px;
  font-size: 12px;
}

.carCard .price-text {
  color: #35A1FB;
  font-size: 15px;
  font-weight: 600;
}
 