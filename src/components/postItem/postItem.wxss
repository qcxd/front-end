.post-item {
    width: 100%;
    background-color: #fff;
}
.bold {
    font-size: 28rpx;
    font-weight: 700;
}
/* header */
.post-item__header{
    position: relative;
    padding: 10px 15px;
    height: 72rpx;
    display: flex;
    align-items: center;
}
.header__avatar {
    margin-right: 20rpx;
}
.header-text {
    display: flex;
    height: 100%;
    flex-direction: column;
    justify-content: space-around;
}
.header-time {
    font-size: 20rpx;
    color: rgb(173,173,173);
}

.mini-translate {
  position: absolute;
  right: 10px;
}

.mini-translate__image {
  width: 20px;
  height: 20px;
}

.post-to {
    font-size: 24rpx;
    color: rgb(100, 100, 100);
    margin: 0 10rpx;
}

/* content */
.post-item__content {
    padding: 10rpx 15px;
    font-size: 28rpx;
    color: rgb(100, 100, 100);
}
/* image */
.image_placeholders {
    padding: 20rpx 30rpx;
}
.image_placeholders image{
    width: 0;
    height: 0;
}
/* comment */
.post-item__comment {
    margin: 8rpx 0;
    min-height: 72rpx;
    padding: 0 15px;
}
/* write comment */
.write_comment {
    display: flex;
    flex-flow: row-reverse;
    min-height: 40px;
}
.comment_img_post {
    margin-right: 20rpx;
    order: 3;
}
.post_img {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    display: block;
}
.write_comment_block {
    width: calc(100vw - 260rpx);
    padding: 10rpx 20rpx;
    /* height: 2.5em; */
    border-radius: 20rpx;
    border: 1px solid rgb(200, 200, 200);
    margin-bottom: 20rpx;
    margin-top:8rpx;
    order: 2;
}
  
.write_comment_block_right {
    width: calc(100vw - 320rpx);
    padding: 10rpx 20rpx;
    /* height: 2.5em; */
    border-radius: 20rpx;
    border: 1px solid rgb(200, 200, 200);
    margin-bottom: 20rpx;
    margin-top: 8rpx;
    order: 2;
}
  
.send_comment {
    width: 80rpx;
    align-self: center;
    text-align: center;
    justify-content: end;
    order: 1;
}
  
.send_comment_img {
    width: 50rpx;
    height: 44rpx;
}
  
.write_comment_txt {
    width: 100%;
    font-size: 10px;
}
  
.write_comment_txt_style {
    font-size: 24rpx;
    color: rgb(200, 200, 200);
}
.add_comment_btn {
    height: 40px;
    color: rgb(120, 120, 120);
    display: flex;
    justify-content: flex-end;
    padding-right: 15px;
}
.show_comment_plus {
    font-size: 80rpx;
    color: rgb(120, 120, 120);
    display: flex;
    align-items: center;
}
