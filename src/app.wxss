/**app.wxss**/
@import 'wa-ui.wxss';
page{
  height: 100%;
  background-color: #F8F8F8;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

/** btn */
.carBtn_primary {
  border-radius: 50px;
  background: linear-gradient(to right, #4C70CB , rgb(85, 128, 238));
}


/** flex */
.car-flex {
  display: flex;
  align-items: center;
}
.flex_1 {
  flex: 1;
}

/** 店铺 */
.home-shop {
  display: flex;
  align-items: flex-start;
  background-color: #ffffff;
}

.home-shop + .home-shop {
  margin-top: 10px;
}

.home-shop .shop-header {
  padding: 10px 0px 10px 10px;
}

.home-shop .shop-header image {
  width: 40px;
  height: 40px;
}

.home-shop .shop-info {
  padding: 10px;
  flex: 1;
}

.home-shop .shop-title {
  display: flex;
  align-items: center;
  padding-bottom: 4px;
  font-size: 15px;
  color: #666666;
}

.home-shop .shop-title image{
  width: 18px;
  height: 18px;
  padding-left: 10px;
}

.home-shop .shop-title text{
  flex: 1;
}

.home-shop .shop-verify{
  border: 1px solid #4C70CB;
  padding: 2px 4px;
  border-radius: 4px;
  color: #4C70CB;
  font-size: 11px;
}

.home-shop .shop-intro {
  overflow: hidden;  
  color: #999999;
  padding: 6px 0px;
  height: 20px;
  display: flex;
  border-bottom: 1px solid #efefef; 
  font-size: 13px; 
}

.home-shop .shop-intro text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}