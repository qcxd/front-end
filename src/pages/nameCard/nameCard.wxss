/* pages/nameCard/nameCard.wxss */
.nameCard {
  /* background-color: #ffffff; */
  width: 100%;
  height: 100%;
  background: -webkit-linear-gradient(to bottom right, #D9EFFD, #A0D3FE); /* Safari 5.1 - 6.0 */
  /* background: -o-linear-gradient(to bottom right, #35A1FB, #4BB6FC, #A0D3FE);
  background: -moz-linear-gradient(to bottom right, #35A1FB, #4BB6FC, #A0D3FE);
  background: linear-gradient(to bottom right, #35A1FB, #4BB6FC, #A0D3FE); */
  background-size: 100%;
  background-repeat: no-repeat;
}

.nameCard .qrcode {
  text-align: center;
}

.nameCard .qrcode image {
  width: 40%;
}

.nameCard .qrcode .small-text {
  font-size: 14px;
}

.nameCard .qrcode .actions {
  float: right;
  padding:15px;
}

.nameCard .qrcode .actions icon{
  padding: 0px 5px;
}

.nameCard .detail {
  padding: 5px 20px;
}

.nameCard .detail icon {
  padding-right: 10px;
}

.nameCard .detail .car-flex {
  padding: 10px 0px;
}

.nameCard canvas {
  width:100%;
  height:90%;
  margin-top: 10%;
  position:fixed;
  background-color:#ffffff;
}
