@import "../../lib/weui.wxss";

.topView {
  height: 100%;
}
.start_btn {
  background-color: #E6721D !important;
  margin-top: 60px;
  border-radius: 3px;
}
view {
  background-color: white;
}
.content {
  background-color: white;
  flex-direction:column;
  height: 100%;
  width: 100%;
}

.account {
  text-align:center;
}
.fontColor {
  color: rgba(74,74,74,1);
}

.find_group {
  margin-top: 15px;
}

.small_dark {
  color: rgba(74,74,74,1);
  font-size: 12px;
}

.join_group {
  padding-top:54px;
}

.suggested_groups {
  margin-top: 20px;
}

.suggested_groups_title {
  display: inline-block;
  font-size: 12px;
  color: rgba(74,74,74,1);
  width: 100%;
}

.group_scroll_field {
  height: 45vh;
}

.join_all {
  font-size: 12px;
  float:right;
  display: inline-block;
  height: 20px;
  line-height: 20px;
  color: #E6721D;
  border: none!important;
  border-radius: 0;
  padding: 0;
  margin: 0;
  background: none;
  box-shadow: unset!important;
  position: unset;
  text-align: right;
}

.one_group {
  display: flex;
  margin-top: 15px;
}

.one_group_pic {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  position: relative;
  border: 1px solid rgb(173, 173, 173);
  display: inline-flex;
}
.group_img {
  height: 25px;
  width: 25px;
  position: absolute;
  left: 12px;
  top: 12px;
}

.one_group_detail {
  display: inline-flex;
  margin-left: 20px;
  width: calc(100vw - 80px - 80px);
  border-bottom: 1px solid rgb(219, 219, 219);
}

.one_group_detail_inline {
  width: 100%;
}

.group_name {
  color: rgba(74,74,74,1);
  font-size: 12px;
  /* font-weight: 300; */
}

.group_member_num {
  color: rgba(162,162,162,1);
  font-size: 10px;
}

.one_group_option {
  display: inline-flex;
  width: 60px;
  height: 50px;
  align-self: center;
  justify-content: space-around;
  border-bottom: 1px solid rgb(219, 219, 219);
}

.join_pic {
  width: 28px;
  height: 28px;
  margin-top: 6px;
  margin-left: 20px;
}

 .conText {
    font-size: 20px;
    align-self: flex-end;
  }
