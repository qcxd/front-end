/* pages/shop/shop.wxss */
.shop-view {
  padding: 10px;
  margin-bottom: 10px;
}

.shop-view .subtitle {
  text-align: center;
  font-size: 12px;
  color: #888888;
  padding: 15px;
}

.shop-view .shop-box {
  width: 49%;
  font-size: 14px;
  color: #797979;  
  display: inline-block;
  background-color: #ffffff;
  border-radius: 4px;
}

.shop-view .shop-box + .shop-box {
  margin-left: 2%;
}

.shop-box image {
  width:100%;
  margin:5px 0px;
}

.shop-box .add {
  background-color: #4C70CB;
  color: #ffffff;
  border-radius: 50px;  
  font-size: 12px;
  padding: 2px 10px;
}

.shop-box .cancle {
  color: #4C70CB;
  border: 1px solid #4C70CB;
  border-radius: 50px;
  font-size: 11px;
  padding: 2px 10px;
}

.shop-box .car-info {
  padding: 10px;
}

.shop-box .desc {
  font-size: 12px;
  padding-bottom: 2px;
}




