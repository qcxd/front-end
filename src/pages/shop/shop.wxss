/* pages/shop/shop.wxss */
.shopPage {

}

.shopPage .shop-head {
  padding: 10px;
  color: #4A4A4A;
  font-size: 12px;
  background-color: #ffffff;
}

.shopPage .shop-head image {
  width: 50px;
  height: 50px;
  margin-right: 15px;
}

.shopPage .shop-head button {
  line-height: 2;
  padding: 0px 15px;
  font-size: 12px;
  background-color: #4C70CB;
  color: #ffffff;
}

.shopPage .shop-head .title{
  font-size: 18px;
}

.shopPage .shop-head-info {
 padding-bottom: 10px;
}

.shopPage .shop-head-info .number{
  padding-right: 20px;
}
.shop-view {
  padding: 10px;
  margin-bottom: 10px;
}

.shop-view .subtitle {
  text-align: center;
  font-size: 12px;
  color: #888888;
  padding: 15px;
}

.shop-view .shop-box {
  width: 48%;
  font-size: 14px;
  color: #797979;  
  display: inline-block;
  background-color: #ffffff;
  border-radius: 4px;
  margin: 0px 1%;
}

.shop-box image {
  width:100%;
  margin:5px 0px;
}

.shop-box .add {
  background-color: #4C70CB;
  color: #ffffff;
  border-radius: 50px;  
  font-size: 12px;
  padding: 2px 10px;
}

.shop-box .cancle {
  color: #4C70CB;
  border: 1px solid #4C70CB;
  border-radius: 50px;
  font-size: 11px;
  padding: 2px 10px;
}

.shop-box .car-info {
  padding: 5px 10px 10px 10px;
}

.shop-box .desc {
  font-size: 12px;
  padding-bottom: 2px;
}

.shopPage .address {
  display: flex;
  align-items: center;
  padding: 5px 0px;
}

.shopPage .address text{
  flex: 1;
  font-size: 14px;
}

.shopPage .address icon {
  padding-left: 15px;
} 

.shopPage .address .icon-address {
  padding:0px 7px 0px 0px;
}

.shopPage .address .line-v {
  border-right: 1px solid #d8e2e9;
}

.shop-menu {
  display: flex;
  align-items: center;
  padding: 10px;
  font-size: 13px;
  color: #525252;
}

.shop-menu input {
  width: 50px;
  margin-right: 10px;
  padding-left:30px;
  background-color: #EFEEEE;
  border-radius: 25px;
}

.shop-menu view {
  padding: 2px 5px;
  margin: 0px 5px;
}

.shop-menu  .active {
  color: #4C70CB;
  border-bottom: 1px solid #4C70CB;
}

.shop-menu icon {
  position: relative;
  left: 25px;
  z-index: 10;
}




