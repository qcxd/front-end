<!--pages/createShop/createShop.wxml-->
<view class='createShopPage'>
  <form bindsubmit="onSubmit" bindreset="formReset">
    <view class='info-box'>
      <view class='subtitle'>个人信息</view>
      <view class='info-cell car-flex'>
        <text>姓名</text>
        <input name="name" placeholder="姓名" placeholder-class="placeholder" />
      </view>
      <view class='info-cell car-flex'>
        <view class='wechat'>
          <view>微信二维码</view>
          <view class='small-text'>请保存自己的微信二维码并保存</view>
        </view>
        <image class='wechat-code' src="../../image/wechat.jpeg"></image>
      </view>
      <view class='info-cell car-flex'>
        <text>手机号</text>
        <input name="tel" placeholder="11位手机号" placeholder-class="placeholder" />
      </view>
    </view>

    <view class='info-box'>
      <view class='subtitle'>店铺信息</view>
      <view class='info-cell car-flex'>
        <text>店铺名</text>
        <input placeholder="请输入店铺名称" placeholder-class="placeholder" />
      </view>
      <view class='info-cell car-flex'>
        <text>省份、城市、区县</text>
        <input placeholder="街道门牌信息" placeholder-class="placeholder" />
      </view>
      <view class='info-cell car-flex'>
        <text>详细地址</text>
        <input name="address" placeholder="街道门牌信息" placeholder-class="placeholder" />
      </view>
      <view class='address-cell car-flex '>
        <Icon iconName='weChat' width="16px" height="16px"/>
        <text>一键导入微信地址</text>
        <Icon iconName='arrowRight' width="6px" height="8px"/>
      </view>
    </view>
  
    <button form-type="submit">提交</button>
  </form>
</view>
