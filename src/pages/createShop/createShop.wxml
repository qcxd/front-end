<view class='createShopPage'>
  <form bindsubmit="onSubmit" bindreset="formReset">
    <view class='info-box'>
      <view class='subtitle'>个人信息</view>
      <view class='info-cell car-flex'>
        <text>姓名</text>
        <input name="name" placeholder="姓名" placeholder-class="placeholder"/>
      </view>
      <view class='info-cell car-flex'>
        <view class='wechat'>
          <view>微信二维码</view>
          <view class='small-text'>请保存自己的微信二维码并保存</view>
        </view>
        <!-- <image class='wechat-code' src="../../image/wechat.jpeg"></image> -->
        <view class="weui-uploader">
          <!-- <view class="weui-uploader__hd">
            <view class="weui-uploader__title">图片上传</view>
            <view class="weui-uploader__info">{{images.length}}/9</view>
          </view> -->
          <view class="weui-uploader__bd">
            <view class="weui-uploader__files" id="uploaderFiles">
              <block wx:for="{{images}}" wx:key="*this">
                <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                  <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                </view>
              </block>
            </view>
            <block wx:if="{{images.length <= 0}}">
              <view class="weui-uploader__input-box">
                <view class="weui-uploader__input" bindtap="chooseImage" data-num='{{images.length}}'></view>
              </view>
            </block>
          </view>
        </view>
      </view>
      <view class='info-cell car-flex'>
        <text>手机号</text>
        <input name="phone" placeholder="11位手机号" placeholder-class="placeholder" />
      </view>
    </view>

    <view class='info-box'>
      <view class='subtitle'>店铺信息</view>
      <view class='info-cell car-flex'>
        <text>店铺名</text>
        <input name="shopName" placeholder="请输入店铺名称" placeholder-class="placeholder" />
      </view>
      <view class='info-cell car-flex'>
        <text>选择地区</text>
        <!-- <input value="{{addressInfo}}" placeholder="地区信息" placeholder-class="placeholder" disabled/> -->
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}">
          <view class="{{region.length <= 0 ? 'picker placeholder' : 'picker'}}">
            <block wx:if='{{region.length <= 0}}' class='placeholder'>
              请选择地区
            </block>
            {{region[0]}}{{region[1]}}{{region[2]}}
          </view>
        </picker>
      </view>
      <view class='info-cell car-flex'>
        <text>详细地址</text>
        <input name="address" placeholder="街道门牌信息" placeholder-class="placeholder" value="{{address}}" />
      </view>
      <view class='address-cell car-flex '>
        <Icon iconName='weChat' width="16px" height="16px"/>
        <view class="btn-area">
          <view type="primary" bindtap="chooseAddress">一键导入微信地址</view>
        </view>
        <Icon iconName='arrowRight' width="6px" height="8px"/>
      </view>
    </view>
  
    <button form-type="submit">提交</button>
  </form>

