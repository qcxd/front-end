.home-page {

}

.select {
  padding: 10px;
  color: #797979;
  font-size: 13px;
  background-color: #ffffff;
  justify-content: space-around; 
  border-bottom: 1px solid #efefef;
  margin-bottom: 10px;
}

.select text {
  text-align: center;
  flex: 0.5;
}

.select text + text {
  border-left: 1px solid #efefef;
}

.shop-prod {
  display: flex;
  padding: 10px 0px;
  justify-content: space-between;
  color: #999999;
}

.shop-prod .carCard-flex{
  flex: 0.32;
}

.shop-prod .shop-car {
  text-align: center;
  font-size: 12px;
  font-weight: 400;
  flex: 0.32;
}

.shop-prod .shop-car image {
  width: 100%;
}
