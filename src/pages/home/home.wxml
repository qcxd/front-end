<!--pages/home/home.wxml-->
<view class='home-page'>
  <view class='car-search'>
    <icon type="search" size="15" />
    <input type='search' bindblur="doSearch" placeholder="搜索" placeholder-class='placeholder'/>
  </view>
  
  <view class='select car-flex'> 
    <view bindtap='selectArea' class="car-flex">
      <text>全部地区</text>
      <icon iconName='arrowDown' width='12px' height='6px' />
    </view> 
    <view bindtap='selectSort' class="car-flex">  
      <text>智能排序</text>
      <icon iconName='arrowDown' width='12px' height='6px' />
    </view>
  </view>

  <block wx:for="{{shopList}}">
    <view bindtap='goShop' data-id="{{item.id}}">
      <shopHead shopInfo='{{item}}' bind:followshop="followShop"/>
    </view>

    <view class='shop-prod'>
      <block wx:for="{{item.Cars}}">
        <view catchtap='goCarDetail' class='carCard'>
          <carCard carDatail="{{item}}"></carCard>
        </view>
      </block>
    </view>
  </block>
  
  <block wx:if="{{shopList.legth % 10 !== 0}}">
    <footer />
  </block>

  <pickCity />
</view>
